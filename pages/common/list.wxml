<import src="../common/prompt.wxml" />

<template name="list">
  <template is="prompt" data="{{ prompt }}" />

  <view class="scroll-list">
    <view class="weui-panel weui-panel_access" wx:if="{{ !!goods.paginate.total }}">
      <view class="weui-panel__bd">
        <!-- 商品列表 S -->
        <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" bindtap="navigateTo" wx:for="{{ goods.items }}" wx:key="" data-id="{{ item.id }}">

          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
            <image class="weui-media-box__thumb" src="../../assets/images/87.gif" />
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title"> {{ item.name }} </view>
            <view class="weui-media-box__desc">
              <text class="text-orangered">¥ {{ item.price }}</text>
            </view>
          </view>
        </view>
        <!-- 商品列表 E -->

      </view>
    </view>
  </view>
</template>